<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>MaMeLi - Listado de productos</title>
        <link rel="stylesheet" href="/css/shop.css">
        <link rel="stylesheet" href="/css/login.css">
        <link rel="stylesheet" href="/css/productForm.css">
        
    </head>
    <body>

        <%- include('../partials/header') %>
        <main class="productList-main">
            <%if(productsStockOn.length==0){%>
                <h1 style="padding: 150px 0; text-align: center;">No hay productos disponibles</h1>
            <%}else{%>  
                <div class="products-list-container">
                    <h1 class="productsListTitle">Listado de productos</h1>
                    <%for(let i=0;i<productsStockOn.length;i++){%>
                            <div class="product-container">
                                <!-- aca ira a el detail correspondiente al ID -->
                                <a class="productList-anchor" href="/product/detail/<%=productsStockOn[i].id%>">
                                    <!-- aca ira el nombre e imagen correspondientes al i del OL -->
                                    <%=productsStockOn[i].name%>
                                    <br>
                                    <%if(productsStockOn[i].image_product){%>
                                        <img src="/imagenes/productImages/<%=productsStockOn[i].image_product%>"> 
                                    <%} else{%>
                                        <img src="/imagenes/logo.JPG">
                                    <%}%>        
                                </a>  
                            </div>          
                    <%}%>               
                </div>
            <%}%> 

            <a class="productList-anchor newProduct-anchor" href="/product/create">Crear un nuevo producto</a>

            <a class="productList-anchor newProduct-anchor" href="/product/nostock">Stock</a>
            
        </main>
    
        <%- include('../partials/footer') %>

        <script src="https://kit.fontawesome.com/17464b966e.js" crossorigin="anonymous"></script>

    </body>

</html>